<section class = 'introduction'>
  <header>
    <h1 class = 'header'> Adam Hendricksen </h1>
  </header>
</section>
<section class = 'recent_blogs'>
  <header>
    <h3 class = 'subheader'> Recent blog posts </h3>
  </header>
  <% @posts.each do |post| %>
    <article class = 'thumbnail'>
      <%= link_to post.title, posts_path(anchor: post.id) %>
    </article>
  <% end %>
</section>
